<%= render "csv_error_messages" %>
<%= form_tag({ action: "map_data" }) do %>
<%= submit_tag("Continue") %>
<table>
  <caption>Uploaded file: <span style="font-size: larger; font-weight: bold"><%= File.basename(session[:csvpath]) %></span></p></caption>
  <thead>
    <tr>
      <% @headers.each do |header| %>
      <th><%= header %></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @validated_data.each do |row| %>
    <tr>
      <% row.each do |value| %>
      <% color = nil
         case value[:validation_result]
         when :valid
         color = "green"
         when :fatal_error
         color = "red"
         end %>
      <td style="background-color: <%= color %>" title="<%= value[:validation_message] %>"><%= value[:data] %></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>
<% end %>


