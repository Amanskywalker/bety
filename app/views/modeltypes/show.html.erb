<div class="content">
  <div class="container">
    <div class="sixteen columns">
      <header>
        <h1>Viewing Model Type</h1>
      </header>

      <a style="text-decoration: none" href="#" onclick="showHide('show_pfts')" id="show_show_pfts">[+] View Related Pfts</a>
      <br/>
      <div id="show_pfts" class="hidden notvisible">
        <%= render 'show_pfts' %>
      </div>

      <br>

      <a style="text-decoration: none" href="#" onclick="showHide('show_models')" id="show_show_models">[+] View Related Models</a>
      <br/>
      <div id="show_models" class="hidden notvisible">
        <%= render 'show_models' %>
      </div>

      <br>

      <a style="text-decoration: none" href="#" onclick="showHide('show_formats')" id="show_show_formats">[+] View Associated Formats</a>
      <br/>
      <div id="show_formats" class="hidden notvisible">
        <%= render 'show_formats' %>
      </div>

      <br>
      <hr>

      <!-- InstanceBeginEditable name="Full Width Content" --> 
      <dl class="dl-horizontal">
        <dt>Model Type</dt>
        <dd><%= @modeltype.name %></dd>
      </dl>
      <dl class="dl-horizontal">
        <dt>Last updated by</dt>
        <dd><%= user_for_view(@modeltype.user) %></dd>
      </dl>

      <div class="form-actions">
        <div class="button-group">
          <%= link_to( modeltypes_path ) do %>
            <button class="button"><i class="icon-arrow-left"></i> All Records</button>
          <% end %>
          <%= link_to( edit_modeltype_path(@modeltype) ) do %>
            <button type="submit" class="button button-primary"><i class="icon-edit"></i> Edit Record</button>  
          <% end %>
        </div>
      </div>
      <!-- InstanceEndEditable --> </div>
  </div>
  <!-- container --> 
</div>

