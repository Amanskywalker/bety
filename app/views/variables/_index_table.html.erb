<table class="pretty">
  <tr>
    <th><%= sortable "variables.name", "Name" -%></th>
    <th><%= sortable "variables.description", "Description" -%></th>
    <th><%= sortable "variables.units", "Units" -%></th>
    <th><%= sortable "variables.notes", "Notes" -%></th>
  </tr>

<% @variables.each do |variable| %>
  <tr<%= " style='background-color:yellow'" if @search and !@search[/[^\d]/] and variable.id == @search.to_i%>>
    <td><%=h variable.name %></td>
    <td><%=h variable.description %></td>
    <td><%=h variable.units %></td>
    <td><%=h variable.notes %></td>
    <td><%= link_to 'Show', variable %></td>
    <td><%= link_to 'Edit', edit_variable_path(variable) %></td>
    <td><%= link_to 'Destroy', variable, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<%= will_paginate @variables %>
