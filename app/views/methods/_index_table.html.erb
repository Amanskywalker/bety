<h1>Listing methods</h1>

<table>
  <tr>
    <th><%= link_to "Name", "#", {:onclick => "order('methods.name')"} -%><span id="methods.name"></span></th>
    <th><%= link_to "Description", "#", {:onclick => "order('methods.description')"} -%><span id="methods.description"></span></th>
    <th><%= link_to "Author", "#", {:onclick => "order('citations.author')"} -%><span id="citations.author"></span></th>
  </tr>

<% @methods.each do |method| %>
  <tr<%= " style='background-color:yellow'" if @search and !@search[/[^\d]/] and method.id == @search.to_i%>>
    <td><%=h method.name %></td>
    <td><%=h method.description %></td>
    <td><%= link_to_if method.citation,method.citation,method.citation %></td>
    <td><%= link_to 'Show', method %></td>
    <% if current_user.page_access_level <= 3 %>
    <td><%= link_to 'Edit', edit_method_path(method) %></td>
    <% end %>
    <% if current_user.page_access_level == 1 %>
    <td><%= link_to 'Destroy', method, :confirm => 'Are you sure?', :method => :delete %></td>
    <% end %>
  </tr>
<% end %>
</table>

<%= will_paginate @methods, :renderer => 'RemoteLinkRenderer' , :params => {:action => :search}, :remote => { :loading => "Element.show('spinner')",
                        :complete => "Element.hide('spinner')",
                        :with => "'current_sort_order='+current_sort_order+'&search='+Form.Element.getValue('search')+'&current_sort='+current_sort"  } %>
