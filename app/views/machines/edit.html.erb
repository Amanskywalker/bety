<div class="content">
	<div class="container">
		<div class="sixteen columns">
			<header>
	      <h1>Editing Machine</h1>
			</header>

      <%= form_for(@machine) do |f| %>
        <%= f.error_messages %>

        <div class="row">
          <div class="sixteen columns alpha omega">
            <%= f.label :hostname %>
            <%= f.text_field :hostname %>
          </div>
        </div>
        <div class="row">
          <div class="6 columns alpha omega">
            <%= f.label :sync_host_id %>
            <%= f.text_field :sync_host_id %>
          </div>
        </div>
        <div class="row">
          <div class="sixteen columns alpha omega">
            <%= f.label :sync_contact %>
            <%= f.text_field :sync_contact %>
          </div>
        </div>
        <div class="row">
          <div class="sixteen columns alpha omega">
            <%= f.label :sync_url %>
            <%= f.text_field :sync_url %>
          </div>
        </div>
        <div class="row">
          <div class="5 columns">
            <%= f.label :sync_start %>
            <%= f.text_field :sync_start %>
          </div>
          <div class="5 columns">
            <%= f.label :sync_end %>
            <%= f.text_field :sync_end %>
          </div>
        </div>

        <div class="form-actions">
          <div class="button-group">
            <%= link_to( machines_path ) do %>
              <button class="button" type="button"><i class="icon-arrow-left"></i> All Records</button>
            <% end%>
            <%= link_to( @machine ) do %>
              <button class="button" type="button">Show</button>
            <% end%>
          </div>
					<div class="button-group pull-right">
						<%= f.submit 'Update', :class => "button button-primary" %>
					</div>
				</div>
          
      <% end %>
  
    </div>
  </div>
</div>


