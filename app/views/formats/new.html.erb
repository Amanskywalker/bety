<h1>New format</h1>

<%= form_for :form, @format, :url => { :action => "create" } do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :mime_type %><br />
    <%= f.select :mime_type, Mimetype.order("id desc").collect(&:type_string), {:include_blank => true } %><br />
    <%= f.label :new_mime_type %>: <%= text_field_tag :mime_type_other %>
  </p>
  <p>
    <%= f.label :name %><br />
    <%= f.text_area :name %>
  </p>
  <p>
    <%= f.label :header %><br />
    <%= f.text_field :header %>
  </p>
  <p>
    <%= f.label :skip %><br />
    <%= f.text_field :skip %>
  </p>
  <p>
    <%= f.label :dataformat %><br />
    <%= f.text_area :dataformat %>
  </p>
  <p>
    <%= f.label :notes %><br />
    <%= f.text_area :notes %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', formats_path %>
