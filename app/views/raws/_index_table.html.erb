<table>
  <tr>
    <th><%= link_to "Site", "#", {:onclick => "order('sites.sitename')"} -%><span id="sites.sitename"></span></th>
    <th><%= link_to "Format", "#", {:onclick => "order('formats.name')"} -%><span id="formats.name"></span></th>
    <th><%= link_to "Filepath", "#", {:onclick => "order('raws.filepath')"} -%><span id="raws.filepath"></span></th>
    <th><%= link_to "Start Date", "#", {:onclick => "order('raws.start_date')"} -%><span id="raws.start_date"></span></th>
    <th><%= link_to "End Date", "#", {:onclick => "order('raws.end_date')"} -%><span id="raws.end_date"></span></th>
    <th><%= link_to "Notes", "#", {:onclick => "order('raws.notes')"} -%><span id="raws.notes"></span></th>
    <th><%= link_to "Created", "#", {:onclick => "order('raws.created_at')"} -%><span id="raws.created_at"></span></th>
    <th><%= link_to "Updated", "#", {:onclick => "order('raws.updated_at')"} -%><span id="raws.updated_at"></span></th>
    <th><%= link_to "Access Level", "#", {:onclick => "order('raws.access_level')"} -%><span id="raws.access_level"></span></th>
    <th>File</th>
  </tr>

<% @raws.each do |raw| %>
  <tr<%= " style='background-color:yellow'" if @search and !@search[/[^\d]/] and raw.id == @search.to_i%>>
    <td><%= link_to_if raw.site, raw.site, raw.site %></td>
    <td><%= link_to_if raw.format, raw.format, raw.format %></td>
    <td><%=h raw.filepath %></td>
    <td><%=h raw.start_date %></td>
    <td><%=h raw.end_date %></td>
    <td><%=h raw.notes %></td>
    <td><%=h raw.created_at.to_s(:db) %></td>
    <td><%=h raw.updated_at.to_s(:db) %></td>
    <td><%=h access_levels(raw.access_level) %></td>
    <td><% raw.raws_documents.each do |document| %>
          <%= link_to document.doc_file_name, document.doc.url %>,<br />
    <% end %></td>
    <td><%= link_to 'Show', raw %></td>
    <td><%= link_to 'Edit', edit_raw_path(raw) %></td>
    <td><%= link_to 'Destroy', raw, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<%= will_paginate @priors, :renderer => 'RemoteLinkRenderer' , :params => {:action => :search}, :remote => { :loading => "Element.show('spinner')",
                        :complete => "Element.hide('spinner')",
                        :with => "'current_sort_order='+current_sort_order+'&search='+Form.Element.getValue('search')+'&current_sort='+current_sort"  } %>



