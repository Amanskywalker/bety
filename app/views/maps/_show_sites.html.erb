<% if @sites
      @sites.each do |site| %>
  <tr>
    <td><%= site.city  -%></td>
    <td><%= site.state -%></td>
    <td><%= site.country -%></td>
    <td><%= site.lat -%></td>
    <td><%= site.lon -%></td>
    <td><%= site.mat -%></td>
    <td><%= site.map -%></td>
