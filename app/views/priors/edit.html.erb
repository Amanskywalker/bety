<div class="content">
	<div class="container">
		<div class="sixteen columns">
			<header>
	      <h1>Editing Prior</h1>
			</header>

      <a style="text-decoration: none" href="#" onclick="showHide('edit_pfts_priors')" id="show_edit_pfts_priors">[+] View Related Pfts</a>
      <br/>
      <br/>
      <div id="edit_pfts_priors" class="hidden notvisible">
        <%= render 'edit_pfts_priors' %>
      </div>
      <hr />

      <%= form_for(@prior) do |f| %>
        <%= f.error_messages %>

        <div class="row">
          <div class="eight columns alpha">
            <%= f.label :citation_id %>
            <%= f.select :citation_id, Citation.order('author').collect { |p| [ p.select_default, p.id ] }, { :include_blank => true }, :class => "input-full" %>
            <em><%= link_to "New Citation", new_citation_path %></em>
          </div>
          
          <div class="eight columns omega">
            <%= f.label :variable_id %>
            <%= f.select :variable_id, Variable.order('description').collect { |p| [ p.select_default, p.id ] }, {:selected => @prior.variable_id.to_i }, :class => "input-full" %>
          </div>
        </div>

        <div class="row">
          <div class="eight columns alpha">
            <%= f.label :phylogeny %>
            <%= f.text_field :phylogeny, :class => "input-full" %>
          </div>
          <div class="eight columns omega">
            <%= f.label :distribution %>
            <%= f.select :distn, %w(beta binom cauchy chisq exp f gamma geom hyper lnorm logis nbinom norm pois t unif weibull wilcox), :class => "input-full" %>
            <em><%= link_to "More information about distributions", "http://cran.r-project.org/doc/manuals/R-intro.html#R-as-a-set-of-statistical-tables" %></em>
          </div>
        </div>
        
        <div class="row">
          <div class="eight columns alpha">
            <%= f.label :parameter_a %>
            <%= f.text_field :parama, :class => "input-full" %>
            <br />
            <%= f.label :parameter_b %>
            <%= f.text_field :paramb, :class => "input-full" %>
            <br />
            <%= f.label :n %>
            <%= f.text_field :n, :class => "input-full" %>
          </div>
          
          <div class="eight columns omega">
              <%= f.label :notes %>
            <%= f.text_area :notes, :rows => 10, :class => "input-full"  %>
          </div>
        </div>
        

        <div class="form-actions">
          <div class="button-group">
            <%= link_to( @prior ) do %>
              <button class="button">Show</button>
            <% end%>
            <%= link_to( priors_path ) do %>
              <button class="button">Back</button>
            <% end%>
          </div>
					<div class="button-group pull-right">
						<%= f.submit 'Update', :class => "button button-primary" %>
					</div>
				</div>
          
      <% end %>
      

  
    </div>
  </div>
</div>



























