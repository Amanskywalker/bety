<% form_for(@treatment) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :definition %><br />
    <%= f.text_field :definition %>
  </p>
  <p>
    <%= f.label :control %><br />
    <%= f.select :control, [["True",true],["False",false]], { :include_blank => true } %>
  </p>
  <p>
    <%= f.label :user %><br />
    <%=h @treatment.user %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

