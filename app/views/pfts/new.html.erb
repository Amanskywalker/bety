<div class="content">
	<div class="container">
		<div class="sixteen columns">
			<header>
        <h1>New PFT</h1>
      </header>

      <%= form_for(@pft) do |f| %>
        <%= f.error_messages %>

        <div class="row">
          <div class="sixteen columns alpha">
            <%= f.label :name %>
            <%= f.text_field :name, :class => "input-full" %>
          </div>
          <div class="sixteen columns alpha">
            <%= f.label :modeltype_id %>
            <%= f.collection_select(:modeltype_id, Modeltype.order('name'), :id, :name) %>
          </div>
          
          <div class="sixteen columns alpha">
            <%= f.label :definition %>
            <%= f.text_area :definition, :rows => 10, :class => "input-full" %>
          </div>
        </div>

        <div class="form-actions">
          <div class="button-group">
            <%= link_to( pfts_path ) do %>
              <button class="button" type="button">Back</button>
            <% end%>
          </div>
		      <div class="button-group pull-right">
			      <%= f.submit 'Create', :class => "button button-primary" %>
		      </div>
	      </div>
      <% end %>
    </div>
  </div>
</div>



