<table width="100%">
  <tr>
    <td width="50%"><h3>Existing Variable Relationships</h3></td>
    <td width="50%"><h3>Add Variable Relationship(s)</h3></td>
  </tr>
  <tr>
    <td>
      <table>
        <tr>
          <th></th>
          <th></th>
          <th>Variable Name</th>
          <th>Variable Description</th>
          <th>Variale Units</th>
          <th>Name</th>
          <th>Unit</th>
          <th>Storage Number</th>
          <th>Column Number</th>
        </tr>
        <% @format.formats_variables.each do |c| %>
        <tr>
          <td><%= link_to_remote "X", :url => { :controller => :formats, :action => :rem_formats_variables, :id => c.id }, :confirm => 'Are you sure?'%></td>
          <td><%= link_to "edit", edit_variable_path(c.variable_id) %></td>
          <td><%=h c.variable.name %></td>
          <td><%=h c.variable.description %></td>
          <td><%=h c.variable.units %></td>
          <td><%=h c.name %></td>
          <td><%=h c.unit %></td>
          <td><%=h c.storage_type %></td>
          <td><%=h c.column_number %></td>
        </tr>
        <% end %>
      </table>
    </td>
    <td>
      <% form_remote_tag :url => {:controller => :formats, :action => 'edit_formats_variables' } do %>
      <%= select_tag :variable_id, options_for_select(Variable.all.collect { |x| [x.select_default,x.id] }) %><br />
      <%= label_tag :name, "Name" %><%= text_field_tag 'formats_variable[name]' %><br />
      <%= label_tag :unit, "Unit" %><%= text_field_tag 'formats_variable[unit]' %><br />
      <%= label_tag :storage_type, "Storage Type" %><%= text_field_tag 'formats_variable[storage_type]' %><br />
      <%= label_tag :column_header, "Column Number" %><%= text_field_tag 'formats_variable[column_number]' %><br />
      <%= hidden_field_tag 'id', @format.id %>
      <br /><br />
      <%= submit_tag "Select" %>
      <% end %>
    </td>
  </tr>
</table>
