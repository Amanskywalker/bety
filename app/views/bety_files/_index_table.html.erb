<table class="pretty">
  <tr>
    <th><%= sortable "files.file_name", "File Name" -%></th>
    <th><%= sortable "files.file_path", "File Path" -%></th>
    <th><%= sortable "files.md5", "Md5" -%></th>
    <th>Created by</th>
    <th>"Updated by"</th>
    <th><%= sortable "machines.hostname", "Machine" -%></th>
    <th><%= sortable "formats.mime_type", "Format" -%></th>
    <th></th>
    <th></th>
  </tr>
<% @files.each do |file| %>
  <tr<%= " style='background-color:yellow'" if @search and !@search[/[^\d]/] and file.id == @search.to_i%>>
    <td><%=h file.file_name %></td>
    <td><%=h file.file_path %></td>
    <td><%=h file.md5 %></td>
    <td><%= link_to_if file.created_user, file.created_user, file.updated_user %></td>
    <td><%= link_to_if file.updated_user, file.updated_user, file.updated_user %></td>
    <td><%= link_to_if file.machine, file.machine, file.machine %></td>
    <td><%= link_to_if file.format, file.format, file.format%></td>
    <td><%= link_to 'Show', file %></td>
    <% if current_user.page_access_level <= 3 %>
      <td><%= link_to 'Edit', edit_bety_file_path(file) %></td>
    <% end %>
    <% if current_user.page_access_level == 1 %>
      <td><%= link_to 'Destroy', file, :confirm => 'Are you sure?', :method => :delete %></td>
    <% end %>
  </tr>
<% end %>
</table>

<%= will_paginate @files %>

