<h1>Editing trait <%= link_to_prototype_window(image_tag("help.gif"), "help_popup1", { :className => "alphacube", :width => "625", :height => "525", :zIndex => "100", :resizable => "true", :draggable => "true", :wiredDrag => "true", :url => "/bety/node20.html?min" }) %></h1>

<% form_for(@trait) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :site_id, "Site" %><br />
    <%= f.select :site_id, Site.all(:order => 'city').collect { |p| [ p.select_default, p.id ] }, {} %>
  </p>

  <%= render :partial => "species/species_search" %>

  <p>
    <%= f.label :citation_id %><br />
    <%= f.select :citation_id, Citation.all(:order => 'author').collect { |p| [ p.select_default, p.id ] }, {} %>
  </p>
  </p>
  <p>
    <%= f.label :cultivar_id %><br />
    <%= f.select :cultivar_id, Cultivar.all(:joins => :specie, :order => 'species.scientificname').collect { |p| [ p.select_default, p.id ] }, { :include_blank => true } %>
  </p>
  <p>
    <%= f.label :variable_id, "Trait" %><br />
    <%= f.select :variable_id, Variable.all(:order => 'name').collect { |p| [ p.select_default, p.id ] }.sort { |a,b| a[0].split(': ')[1] <=> b[0].split(': ')[1] }, {}, {:onchange => 'javascript:traits_get_variable_max_min(jQuery(this).val());'} %>
  </p>
  <p>
    <%= f.label :treatment_id, "Treatment" %><%= treatment_check(f.object) -%><br />
    <%= f.select :treatment_id, Treatment.all(:joins => :citations, :order => 'name', :conditions => {"citations.id" => f.object.citation_id}).collect { |p| [ p.select_default, p.id ] }, {} %>
    <%#= f.select :treatment_id, f.object.citation.treatments.collect { |p| [ p.select_default, p.id ] }, {} %>
  </p>
  <p>
    <%= f.label :entity_id, "Entity" %><br />
    <%= f.select :entity_id, Entity.all().collect { |p| [ p.select_default, p.id ] }, {:include_blank => true} %>
  </p>
  <p>
    <%= f.label :method_id, "Method" %><br />
    <%= f.select :method_id, Methods.all().collect { |p| [ p.select_default, p.id ] }, {:include_blank => true} %>
  </p>
  <p>
    <%= f.label :user_id %><br />
    <%= f.text_field :user_id, :disabled => "Disabled" %>
  </p>
  <p>
    <%= f.label :date %><br />
    <%= f.date_select :date, { :start_year => 1900, :end_year => Time.now.year, :include_blank => "0000", :default => "0000"} %>
  </p>
  <p>
    <%= f.label :dateloc, "Date Level of Confidence" %> <%= link_to_prototype_window(image_tag("help.gif"), "help_popup2", { :className => "alphacube", :width => "625", :height => "525", :zIndex => "100", :resizable => "true", :draggable => "true", :wiredDrag => "true", :url => "/bety/node21.html?min" }) %><br />
    <%= f.select :dateloc, options_for_select($dateloc_drop.sort,f.object.dateloc.to_s) %>
  </p>
  <p>
    <%= f.label :time %><br />
    <%= f.time_select :time, { :include_blank => true } %>
  </p>
  <p>
    <%= f.label :timeloc %><br />
    <%= f.select :timeloc, options_for_select($timeloc_drop.sort,f.object.timeloc.to_s) %>
  </p>
  <p>
    <%= f.label :mean %><br />
    <em><span id="variable_mean">Variable: <span id="variable_name"><%= f.object.variable %></span><br />
    <%= "  Max:Min => (<span id='variable_max'>#{f.object.variable.max}</span>:<span id='variable_min'>#{f.object.variable.min}</span>)" %></span><br />
    (Notify the project manager about this discrepancy if value outside this range)" if f.object.variable %></span></em><br />
    <%= f.text_field :mean %>
  </p>
  <p>
    <%= f.label :n %><br />
    <%= f.text_field :n %>
  </p>
  <p>
    <%= f.label :stat %>  <%= link_to_prototype_window(image_tag("help.gif"), "help_popup3", { :className => "alphacube", :width => "625", :height => "525", :zIndex => "100", :resizable => "true", :draggable => "true", :wiredDrag => "true", :url => "/bety/node22.html?min" }) %><br />
    <%= f.text_field :stat %>
  </p>
  <p>
    <%= f.label :statname %><br />
    <%= f.select :statname, $statname_list %>
  </p>
  <p>
    <%= f.label :access_level %><br />
    <%= f.select :access_level, [["1.Restricted",1],['2.EBI Researchers',2],['3.External Researchers',3],['4.Public',4]]%>
  </p>
  <p>
    <%= f.label :notes %><br />
    <%= f.text_area :notes %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<div id="explain" style="display: none">* = This field for this Trait is NULL in the database. We do not allow this field to be blank, so if you update the record incorrect values might be saved.</div>

<style>
  .red_back {
    background-color: red;
  }
</style>

<script>
  function missingFields(id) {
    id = "label[for=" + id + "]";
    if (typeof $$(id)[0] != "undefined") {
      $$(id)[0].addClassName('red_back');
      $$(id)[0].innerText += "*";
      $('explain').show();
    }
  }
<% ['site_id','citation_id','variable_id','treatment_id','dateloc','specie_id'].each do |column| %>
<%= "  missingFields(\"trait_#{column}\");" if @trait[column.to_sym].nil? %>
<% end %>

</script>

