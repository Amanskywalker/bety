<!-- InstanceBeginEditable name="Full Width Content" -->
<div id="DataTables_Table_0_wrapper" class="dataTables_wrapper form-inline" role="grid">
  <div class="row">
  
    <div class="span6">
      <div id="DataTables_Table_0_length" class="dataTables_length">
      
      <label>
      <select size="1" name="DataTables_Table_0_length" aria-controls="DataTables_Table_0">
        <option value="10" selected="selected">10</option>
        <option value="25">25</option>
        <option value="50">50</option>
        <option value="100">100</option>
      </select> records per page
      </label>
      
      </div> <!-- id="DataTables_Table_0_length" -->
    </div> <!-- class="span6" -->
    
    <div class="span6">
      <div class="dataTables_filter" id="DataTables_Table_0_filter">
        <%= form_tag sites_path, :method => 'get', :id => 'simple_search', :class => "no-margin" do %>
  			  <label>Search: <%= text_field_tag :search, params[:search] %></label>
          <%= hidden_field_tag :direction, params[:direction] %>
          <%= hidden_field_tag :sort, params[:sort] %>
        <% end %>
      </div> <!-- id="DataTables_Table_0_filter" -->
    </div> <!-- class="span6" -->
	</div> <!-- class="row" -->          
	
  <table class="table table-striped table-bordered table-hover datatable dataTable" id="DataTables_Table_0" aria-describedby="DataTables_Table_0_info">
		  <thead>
	      <tr role="row">
<th class="sorting_asc" role="columnheader" aria-controls="DataTables_Table_0" style="width: 150px;" aria-sort="ascending" >Site Name</th>
<th class="sorting" role="columnheader" aria-controls="DataTables_Table_0" style="width: 80px">City</th>
<th class="sorting" role="columnheader" aria-controls="DataTables_Table_0" style="width: 80px" aria-label="Role: activate to sort column ascending">State</th>
<th class="sorting" role="columnheader" aria-controls="DataTables_Table_0" style="width: 67px" aria-label="Status: activate to sort column ascending">Country</th>
<th class="sorting" role="columnheader" aria-controls="DataTables_Table_0" style="width: 67px" aria-label="Status: activate to sort column ascending">Lat</th>
<th class="sorting" role="columnheader" aria-controls="DataTables_Table_0" style="width: 40px">Lon</th>
<th class="sorting" role="columnheader" aria-controls="DataTables_Table_0" style="width: 40px">Espg</th>
<th role="columnheader" aria-controls="DataTables_Table_0" style="width: 200px">Actions</th>
      </tr>
    </thead>    
	  <tbody role="alert" aria-live="polite" aria-relevant="all">
	    <% @sites.each do |site| %>
        <tr<%= " style='background-color:yellow'" if @search and !@search[/[^\d]/] and site.id == @search.to_i%>>
          <td class="center"><%= site.sitename %></td>
          <td class="center"><%= site.city %></td>
          <td class="center"><%= site.state %></td>
          <td class="center"><%= site.country %></td>
          <td class="center"><%= site.lat %></td>
          <td class="center"><%= site.lon %></td>
          <td class="center"><%= site.espg %></td>
					<td class="center ">
					  
					  <!-- MAP -->
<!--<%= link_to_prototype_window("Map", "#{site.id}", { :className => "alphacube", :width => "625", :height => "525", :zIndex => "100", :resizable => "true", :title =>  "#{site.sitename}", :draggable => "true", :wiredDrag => "true", :url => "/sites/map?id=#{site.id}" }) %>-->

				    <% if current_user.page_access_level == 1 %>
              <i class="icon-map-marker"></i> 
            <% end %>
            
					  <!-- LINK -->          
            <% if !session["citation"].nil? %>
              <%= link_to({ :action => "linked", :id => site.id, :remote => true }, :class=> 'button button-small') do %>
                <i class="icon-ok"></i> 
              <% end %>
            <% end %>
            <%= link_to 'Link', {:action => "linked", :id => site.id }, :remote => true %>
            
            <!-- SHOW -->
					  <%= link_to site, :class => "button button-small" do %>
					    <i class="icon-zoom-in"></i>
					  <% end %>

					  <!-- EDIT -->
					  <%= link_to edit_site_path(site), :class => "button button-small" do %>
					    <i class="icon-edit"></i>
					  <% end %>

					  <!-- DELETE -->
					  <% if current_user.page_access_level == 1 %>
              <%= link_to site, :method => :delete, :type => 'site', :confirm => 'Are you sure?', :class=> 'button button-small button-danger' do %>
                <i class="icon-trash"></i> 
              <% end %>
            <% end %>
				  </td>
        </tr>
      <% end %>
	  </tbody>
	</table>
  
	<div class="row">
	  <div class="span6">
	    <div class="dataTables_info" id="DataTables_Table_0_info">Showing 1 to 10 of 32 entries</div>
	  </div>
	  <div class="span6">
	    <div class="dataTables_paginate paging_bootstrap pagination alternate">
        <ul>
          <li class="prev disabled"><a href="#">← Previous</a></li>
          <li class="active"><a href="#">1</a></li>
          <li><a href="#">2</a></li>
          <li><a href="#">3</a></li>
          <li><a href="#">4</a></li>
          <li class="next"><a href="#">Next → </a></li>
        </ul>
      </div>
    </div>
  </div>
</div>

<%= will_paginate @sites %>
