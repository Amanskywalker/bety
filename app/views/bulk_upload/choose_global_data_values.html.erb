<div class="content">
  <div class="container">
	<div class="sixteen columns">
	  <header>
        <h1>Specify Data-Set Wide Values</h1>
      </header>
      <%= form_tag(bulk_upload_data_insertion_path, method: "post", multipart: true) do %>
      <div id="process_container">
        <div id="back"><%= link_to "<< View Validation Results", show_upload_file_contents_path %></div>
        <div id="new">&nbsp;</div>
        <div id="forward">
          <%= submit_tag "Insert Data >>" %>
        </div>
      </div>
      <ul>
        <% @data_set.missing_interactively_specified_fields.each do |field| %>
        <li>
          <%= label_tag field, field + (field == "cultivar" ? " (optional)" : "") %>
          <%= text_field_tag "global_values[#{field.to_sym}]", "#{@session[:global_values][field.to_sym]}" %>
        </li>
        <% end %>
      </ul>
      <% end %>

    </div>
  </div>
</div>
