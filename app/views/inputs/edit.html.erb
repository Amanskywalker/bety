<h1>Editing input</h1>

<% form_for @input, :html => {:multipart => true} do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :site %><br />
    <%= f.select :site_id, Site.all.collect { |p| [ p.select_default, p.id ] }, {} %>
  </p>
  <p>
    <%= f.label :parent %><br />
    <%= f.select :parent_id, Input.all.collect { |p| [ p.select_default, p.id ] }, {:include_blank => true} %>
  </p>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :start_date %><br />
    <%= f.datetime_select :start_date, { :start_year => 1900, :end_year => 2155, :include_blank => "0000", :default => "0000"} %>
  </p>
  <p>
    <%= f.label :end_date %><br />
    <%= f.datetime_select :end_date, { :start_year => 1900, :end_year => 2155, :include_blank => "0000", :default => "0000"} %>
  </p>
  <h2>Testing new file functionality</h2>
  <em>Will add ability to upload new files here in the future</em>
  <%= link_to 'New File', new_dbfile_path %>
  <p>
    <%= f.label :current_file %><br />
    <%= f.select :current_file_id, DBFile.all.collect { |p| [ p.select_default, p.id ] }, { :include_blank => true } %>
  </p>
  <p>
    <%= f.label :files, 'Files related to current file' %>
    <% (DBFile.all(:conditions => ['file_id = ?',f.object.current_file.file_id]) - [f.object.current_file]).each do |file| %>
      <%= link_to file, file %> <%= link_to '[download]', download_dbfile_path(file) %><br />
    <% end if f.object.current_file %>
  </p>
  <p>

  </p>
  <p>
    <%= f.label :notes %><br />
    <%= f.text_area :notes %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

