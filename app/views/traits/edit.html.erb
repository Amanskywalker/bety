<div id="edit_covariates_traits" class="hidden notvisible">
<table width="100%">
  <tr>
    <td width="100%"><h3>Existing Covariates <%= link_to "[new]", new_covariate_path(:trait_id => @trait.id) %></h3></td>
  </tr>
  <tr>
    <td>
      <table>
        <tr>
          <th></th>
          <th></th>
          <th>Variable</th>
          <th>Level</th>
          <th></th>
